<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>


    <article class="relative overflow-hidden rounded-lg shadow transition hover:shadow-lg">
      <%= image_tag (@single.photo),alt:"Photo",class:"absolute inset-0 h-full w-full object-cover" %>
      <div class="relative bg-gradient-to-t from-gray-900/50 to-gray-900/25 pt-32 sm:pt-48 lg:pt-64">
        <div class="p-4 sm:p-6">

            <h3 class="mt-0.5 text-lg text-white">
              <%= @single.name %>
            </h3>
            <p class="mt-0.5 text-lg text-white">
              <%= @single.age %>
            </p>
            <p class="mt-0.5 text-lg text-white">
              <%= @single.liked %>
            </p>
        </div>
      </div>
    </article>
    
    <div class="my-8">
    <%= @single.bio %>
    </div>

  </div>

  <div>
      <%= link_to 'Edit this single', edit_single_path(@single), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <div class="inline-block ml-2">
        <%= button_to 'Destroy this single', single_path(@single), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
      </div>
      <%= link_to 'Back to singles', singles_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>

  <div>
    <% @single.comments.each  do |comment|  %>
      <div>
        <%= comment.body %>
      </div>
    <% end %>
  </div>


  <div>
    <%= form_with model: [ @single, @single.comments.build ] do |form|  %>
      <div>
        <%= form.label 'New Comment' %>
        <%= form.text_area :body %>
      </div>
      <div>
        <%= form.submit 'Submit' %>
      </div>
    <% end %>
  </div>

</div>
